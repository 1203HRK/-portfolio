<% if Like.find_by(user_id: current_user.id, review_id: review.id) %>
  <%= link_to review_destroy_like_path(@review.id),  method: :delete, remote: true do %>
    <i class="fas fa-heart text-danger"></i>
  <% end %>
<% else %>
  <%= link_to review_create_like_path(@review.id), method: :post, remote: true do %>
    <i class="far fa-heart text-secondary"></i>
   <% end %>
<% end %>
<%= review.likes.length %>

