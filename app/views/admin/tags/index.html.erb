<!-- adminタグム -->
<div class="container">
  <div class="row">
    <div class="col-2"></div>
      <div class="col-8">
        <h2>タグ一覧</h2>
        <table class="table table-striped">
           <tr>
            <th>Tag</th>
            <th></th>
            <th></th>
          </tr>
          <% @tags.each do |tag| %>
          <tr>
            <td><%= tag.tag_name %></td>
            <td><%= link_to "edit", edit_admin_tag_path(tag) %></td>
            <td><%= link_to "delete", "/admin/tags/#{tag.id}", method: :delete, "data-confirm" => "本当に削除しますか？" %></td>
          </tr>
        <% end %>
        </table>
       </div>
    <div class="col-2"></div>
  </div>
</div>
