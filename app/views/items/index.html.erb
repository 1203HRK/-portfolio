<div class="container">
  <div class="row">
    <div class="col-1"></div>
      <div class="col-10">
        <h1>アイテム一覧 <%= link_to "new item", new_item_path, class: "btn btn-outline-danger btn-sm" %></h1>
        <% @items.each do |item| %>
        <table class="table table-striped table-hover table-sm">
          <tr>
            <th style="width:70%"><%= link_to item.name + "(#{item.reviews.count})", item_path(item.id) %></th>
            <th style="width:30%"><%= link_to "edit", edit_item_path(item.id) %></th><!-- adminのみ表示にしたい -->
          </tr>
        </table>
        <% end %>
      </div>
    <div class="col-1"></div>
  </div>
</div>