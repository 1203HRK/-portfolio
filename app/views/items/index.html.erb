<div class="container">
  <div class="row">
    <div class="col-1"></div>
      <div class="col-10">
        <h1>アイテム一覧<span class="h4">全<%= @items.count %>件</span></h1>
        <!-- ↓オートコンプリート機能入れられたら出す -->
        <%#= link_to "new item", new_item_path, class: "btn btn-outline-danger btn-sm" %>
        <table class="table table-hover table-sm">
          <% @items.each do |item| %>
          <tr>
            <td class="pl-3" style="width:70%"><%= link_to item.name + "　(#{item.reviews.count})", item_path(item.id) %></th>
            <th style="width:30%">
              <!-- adminのみ表示にしたい -->
              <%= link_to "edit", edit_item_path(item.id) %>
              <%= link_to "　delete", item, method: :delete, "data-confirm" => "本当に削除しますか？" %>
            </th>
          </tr>
          <% end %>
        </table>
       </div>
    <div class="col-1"></div>
  </div>
</div>
