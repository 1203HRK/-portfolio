<!DOCTYPE html>
<html>
  <head>
    <title>BeoPLE</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <link rel="stylesheet" type="text/css" href="http://ajax.googleapis.com/ajax/libs/jqueryui/1/themes/flick/jquery-ui.css">
    <link rel="stylesheet" type="text/css" href="jquery.tagit.css">
    <script type="text/javascript" src="http://ajax.googleapis.com/ajax/libs/jquery/1.8.3/jquery.min.js"></script>
    <script type="text/javascript" src="http://ajax.googleapis.com/ajax/libs/jqueryui/1.9.2/jquery-ui.min.js"></script>
    <script type="text/javascript" src="tag-it.min.js" type="text/javascript"></script>

  </head>

  <body>
    <!-- レスポンスでハンバーガーメニューに -->
      <% if user_signed_in? %>
      <% else %>
      <nav class="navbar navbar-expand-sm" style="background-color:#F1CAE1;" >
        <div class="container">
          <%= link_to root_path do %>
            <%= image_tag "logo.png", class: "navbar-brand  mr-auto" %>
          <% end %>
          <ul class="navbar-nav">
            <li class="nav-item">
              <%= link_to "ログイン", new_user_session_path %>
            </li>
            <li class="nav-item">
              <%= link_to "新規登録", new_user_registration_path %>
            </li>
          </ul>
        </div>
      <% end %>
    </nav>
    <% if user_signed_in? %>
    <div class="container">
      <div class="row">
        <div class="col-3 sidebar_fixed">
          <%= render 'layouts/side', user: @user %>
        </div>
        <div class="col-8">
          <%= yield %>
        </div>
        <div class="col-1"></div>
      </div>
    </div>
    <% else %>
      <%= yield %>
    <% end %>
  </body>
</html>
