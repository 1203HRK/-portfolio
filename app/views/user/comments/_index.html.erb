<div class="comment" style="width:80%;">
  <a class="more" data-toggle="collapse" data-target="#collapseExample" aria-expanded="false" aria-controls="collapseExample">
  コメントを全て見る<span class="fas fa-angle-double-down"></span>
  </a>
  <% comments.first(2).each do |comment| %>
    <% unless comment.id.nil? %>
        <div class="mt-2 no-gutters">
            <%= link_to attachment_image_tag(comment.user, :profile_image, :fill, 30, 30, format: 'jpeg', fallback: "sample.png", class: "rounded-circle"), user_path(comment.user.id) %>
            <%= comment.user.name %> <%= comment.comment %>
            <%= comment.created_at.strftime('%Y/%m/%d') %>
            <% if comment.user == current_user %>
              <%= link_to "削除", review_comment_path(comment.review_id, comment.id), method: :delete, "data-confirm" => "本当に削除しますか？", class: "btn btn-outline-danger btn-sm", remote: true %>
            <% end %>
         </div>
    <% end %>
  <% end %>
  <div class="collapse" id="collapseExample">
    <% comments.offset(2).each do |comment| %>
    <% unless comment.id.nil? %>
        <div class="mt-2 no-gutters">
          <%= link_to attachment_image_tag(comment.user, :profile_image, :fill, 30, 30,  format: 'jpeg', fallback: "sample.png", class: "rounded-circle"), user_path(comment.user.id) %>
          <%= comment.user.name %> <%= comment.comment %>
          <%= comment.created_at.strftime('%Y/%m/%d') %>
          <% if comment.user == current_user %>
            <%= link_to "削除", review_comment_path(comment.review_id, comment.id), method: :delete, "data-confirm" => "本当に削除しますか？", class: "btn btn-outline-danger btn-sm", remote: true %>
          <% end %>
      </div>
    <% end %>
  <% end %>
  </div>
</div>


