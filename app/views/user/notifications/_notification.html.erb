<% visitor = notification.visitor %>
<% visited = notification.visited %>

<div class="border-bottom">
  <!-- 誰が -->
  <%= link_to user_path(visitor) do %>
    <%= attachment_image_tag visitor, :profile_image, :fill, 50, 50, format: 'jpeg', fallback: "sample.png", class: "rounded-circle" %>
    <%= visitor.name %>
  <% end %>
  <a>さんが</a>
  <!-- 何した -->
  <% case notification.action %>
      <% when 'follow' then %>
        <%= "あなたをフォローしました" %>
      <% when 'like' then %>
        <%= link_to 'あなたの投稿', notification.review, style: "font-weight: bold;" %>
        <%= "にいいねしました" %>
        <p><small><%= Review.find_by(id: notification.review_id)&.body %></small></p>
      <% when 'comment' then %>
        <% if notification.review.user_id == visited.id %>
          <%= link_to "あなたの投稿", notification.review, style: "font-weight: bold;" %>
        <% else %>
           <%= link_to review_path(notification.review) do %>
            <%= attachment_image_tag notification.review.user, :profile_image, :fill, 30, 30, format: 'jpeg', fallback: "sample.png", class: "rounded-circle" %>
              <%= notification.review.user.name + 'さんの投稿' %>
            <% end %>
        <% end %>
        <%= "にコメントしました" %>
       <p><small>＠<%= Comment.find_by(id: notification.comment_id)&.comment %></small></p>
    <% end %>
    <%#= time_ago_in_words(notification.created_at).upcase %>

  </div>