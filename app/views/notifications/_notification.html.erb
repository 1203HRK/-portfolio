<!-- あとで -->
<% visitor = notification.visitor %>
<% visited = notification.visited %>
<div> <!--.col-md-6.mx-auto
  .form-inline
    span -->
  <!-- 誰が -->
  <%= link_to user_path(visitor) do %>
    <%= attachment_image_tag visitor, :profile_image, :fill, 30, 30, format: 'jpeg', fallback: "sample.png", class: "rounded-circle" %>
    <%= visitor.name %>
  <% end %>
  <a>さんが</a>
  <!-- 何した -->
  <% case notification.action %>
      <% when 'follow' then %>
        <%= "あなたをフォローしました" %>
      <% when 'like' then %>
        <%= link_to 'あなたの投稿', notification.review, style: "font-weight: bold;" %>
        <%= "にいいねしました" %>
      <% when 'comment' then %>
        <% if notification.review.user_id == visited.id %>
          <%= link_to "あなたの投稿", notification.review, style: "font-weight: bold;" %>
        <% else %>
          span
           <%= link_to review_path(notification.review) do %>
    <%= attachment_image_tag visitor, :profile_image, :fill, 30, 30, format: 'jpeg', fallback: "sample.png", class: "rounded-circle" %>
              strong
                <%= notification.review.user.name + 'さんの投稿' %>
            <% end %>
       <%= "にコメントしました" %>
        p.text-muted.mb-0
          <%= Comment.find_by(id: notification.comment_id)&.comment %>
        <% end %>
    <% end %>
  <!--.small.text-muted.text-right -->
    <%= time_ago_in_words(notification.created_at).upcase %>前
  
  </div>