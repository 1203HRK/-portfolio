<div class="container">
  <div class="row">
    <div class="col-1"></div>
    <div class="col-10">
      <div class="d-flex">
        <div class="my-box w-25">
          <%= attachment_image_tag @user, :profile_image, :fill, 100, 100, format: 'jpeg', fallback: "sample.png", class: "rounded-circle" %>
        </div>
        <div class="my-box w-25 align-self-center">
          <p><%= link_to @user.name, user_path(@user.id) %></p>
          <% @user.personals.each do |personal|  %>
            <a><%= personal.name %></a>
          <% end %>
        </div>
      </div>
      <div class="d-flex">
        <!-- <div class="my-box h2"> %= link_to @item.name, item_path(@item.id) % </div> アイテムが新規投稿されずにこうしんされてしまう -->
        <div class="review-rate my-box align-self-center" data-score="<%= @review.rate %>"></div><!-- java分かってないから勉強してから再挑戦 -->
      </div>
      <div>
        <%= attachment_image_tag @review, :image, :fill, 300, 300, format: 'jpeg', fallback: "sample.png" %>
      </div>
      <div>
       <%= simple_format(@review.body) %>
      </div>
      <div>
        <% @review_tags.each do |tag| %>
          <%= tag.tag_name %> <!-- リンクにしてタグの投稿一覧に飛ばしたい -->
        <% end %>
      </div>
      <div>
        <%= link_to "編集", edit_review_path(@review.id) %>
        <%= link_to "削除", "/reviews/#{@review.id}", method: :delete, "data-confirm" => "本当に削除しますか？" %>
      </div>
      </div>
    <div class="col-1"></div>
  </div>
</div>



<script>
  $('.review-rate').raty({
    readOnly: true,
    score: function() {
      return $(this).attr('data-score');
    },
    path: '/assets/'
  });
</script>
