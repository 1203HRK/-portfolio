<h2>フォロワー</h2>
  <% @users.each do |user| %>
  <table class="table table-striped table-hover table-sm">
    <tr>
      <th style="width:70%"><%= link_to user.name, user_path(user.id) %></th>
      <th style="width:30%">
        <% if user_signed_in? && user != current_user %>
          <%= render "follow_form", user: user %>
        <% end %>
      </th>
    </tr>
  </table>
  <% end %>
