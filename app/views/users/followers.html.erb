<div class="container">
  <div class="row">
    <div class="col-md-2"></div>
      <div class="col-md-8">
        <h2>フォロワー</h2>
         <table class="table table-borderless table-hover table-sm">
          <% @users.each do |user| %>
            <tr>
              <td class="pl-4 align-middle" style="width:70%">
                <%= link_to user_path(user.id) do %>
                <%= attachment_image_tag user, :profile_image, :fill, 35, 35, format: 'jpeg', fallback: "sample.png", class: "mb-2 rounded-circle" %>
                <%= user.name %>
                <% end %>
              </td>
              <td style="width:30%" class="align-middle">
                <% if user_signed_in? && user != current_user %>
                  <%= render "follow_form", user: user %>
                <% end %>
              </td>
            </tr>
          <% end %>
        </table>
       </div>
    <div class="col-md-2"></div>
  </div>
</div>