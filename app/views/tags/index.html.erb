<div class="container">
  <div class="row">
    <div class="col-md-2"></div>
      <div class="col-md-8">
        <h2>タグ一覧<span class="h4">全<%= @tags.count %>件</span></h2>
        <table class="table table-hover table-sm">
          <% @tags.each do |tag| %>
          <tr>
            <td class="pl-3" style="width:70%"><%= link_to "#" + tag.tag_name + "　(#{tag.reviews.count})", tag_path(tag.id) %></td>
            <td style="width:30%"><%= link_to "削除", tag, method: :delete, "data-confirm" => "本当に削除しますか？" %></td>
          </tr>
          <% end %>
        </table>
      </div>
    <div class="col-md-2"></div>
  </div>
</div>